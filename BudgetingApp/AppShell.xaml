<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BudgetingApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BudgetingApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home_icon.png"
            ContentTemplate="{DataTemplate views:MainPage}"/>
        <ShellContent
            Title="About"
            Icon="about_icon.png"
            ContentTemplate="{DataTemplate views:AboutPage}"/>
        <ShellContent
            Title="Wage"
            Icon="wage_icon.png"
            ContentTemplate="{DataTemplate views:WagePage}"/>
        <ShellContent
            Title="Expense"
            Icon="expense_icon.png"
            ContentTemplate="{DataTemplate views:ExpensePage}"/>
        <ShellContent
            Title="Budget"
            Icon="expense_icon.png"
            ContentTemplate="{DataTemplate views:BudgetPage}"/>
    </TabBar>
</Shell>
